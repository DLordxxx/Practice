&НаКлиенте
Процедура ПередЗаписью(Отказ, ПараметрыЗаписи)
    // Проверяем заполненность обязательных полей
    Если Не ЗначениеЗаполнено(Объект.Наименование) Тогда
        Сообщить("Не заполнено наименование дисциплины!", "Ошибка");
        Отказ = Истина;
        Возврат;
    КонецЕсли;
    
    // Вызываем серверную проверку уникальности
    ПроверитьУникальностьДисциплины(Отказ, Объект.Наименование, Объект.ФормаКонтроля, Объект.Ссылка);
КонецПроцедуры

&НаСервере
Процедура ПроверитьУникальностьДисциплины(Отказ, Наименование, ФормаКонтроля, Ссылка)
    
    // Проверяем по комбинации наименования и формы контроля
    Запрос = Новый Запрос;
    Запрос.Текст =
    "ВЫБРАТЬ
    |   Дисциплины.Ссылка КАК Ссылка
    |ИЗ
    |   Справочник.Дисциплины КАК Дисциплины
    |ГДЕ
    |   Дисциплины.Наименование = &Наименование
    |   И Дисциплины.ФормаКонтроля = &ФормаКонтроля
    |   И Дисциплины.Ссылка <> &Ссылка";
    
    Запрос.УстановитьПараметр("Наименование", Наименование);
    Запрос.УстановитьПараметр("ФормаКонтроля", ФормаКонтроля);
    Запрос.УстановитьПараметр("Ссылка", Ссылка);

    РезультатЗапроса = Запрос.Выполнить();
    
    Если НЕ РезультатЗапроса.Пустой() Тогда
       	Сообщить("Дисциплина с наименованием «" + Наименование + "» и формой контролем «"+ ФормаКонтроля +"» уже существует в системе!");
        Отказ = Истина;
    КонецЕсли;

КонецПроцедуры